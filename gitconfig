[user]
    name = Ethan Ho
    email = ethan.n.ho@gmail.com
[includeIf "gitdir:~/TACC/"]
    path = ~/TACC/.gitconfig
[includeIf "gitdir:~/Ho-Lab-Colostate/"]
    path = ~/Ho-Lab-Colostate/.gitconfig
[core]
    editor = vim
[color]
    ui = true
[alias]
    st = status
    co = checkout
    ci = commit
    br = branch
    df = diff
    dfs = diff --staged
    dfc = "!git --no-pager diff --compact-summary"
    dfcs = "!git --no-pager diff --staged --compact-summary"
    edit-unmerged = "!$EDITOR -p `git diff --name-only --diff-filter=U`"
    add-unmerged = "!git add `git diff --name-only --diff-filter=U`"
    logt = log --graph --oneline --decorate
    logo = log --oneline
    ust = reset HEAD --
    mergedry = merge --no-commit --no-ff
    sts = stash -u --keep-index
    dis = checkout --
    res = reset --soft HEAD^
[filter "lfs"]
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f
